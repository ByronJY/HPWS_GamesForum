@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <!-- <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a> -->
        <!-- <a class="btn btn-info me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">個人帳號</a> -->
        <form class="d-flex form-inline me-0 me-sm-2 mb-2 mb-sm-0" asp-area="Identity" asp-page="/Account/Manage/Index">
            <button type="submit" class="flex-fill nav-link btn btn-info text-white">個人帳號</button>
        </form>
    </li>
    <li class="nav-item">
        <form class="d-flex form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="flex-fill nav-link btn btn-danger text-light">登出</button>
        </form>
    </li>
}
else
{
    <li class="nav-item d-flex">
        <!-- <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a> -->
        <a class="flex-fill btn btn-primary me-0 me-sm-2 mb-2 mb-sm-0" asp-area="Identity" asp-page="/Account/Login">登入</a>
    </li>
    <li class="nav-item d-flex">
        <!-- <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a> -->
        <a class="flex-fill btn btn-secondary" asp-area="Identity" asp-page="/Account/Register">註冊</a>
    </li>
}
</ul>
